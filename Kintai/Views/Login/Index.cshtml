@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MG勤怠管理</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
</head>
<body>
    @if (TempData.ContainsKey("message"))
    {
        <div class="alert alert-danger" role="alert">@TempData["message"]</div>
    }
    @using (Html.BeginForm(FormMethod.Post))
    {
        <h1 class="text-center">マイクロギア</h1>
        <h1 class="text-center">勤怠管理 システム</h1>
        <p class="text-center"><button class="btn btn-default">OAuth ログイン</button></p>
    }
</body>
</html>